{
  "name": "balena-auth",
  "version": "3.0.0",
  "description": "Balena session authentication utilities",
  "main": "build/auth.js",
  "types": "lib/*.ts",
  "homepage": "https://github.com/balena-io-modules/balena-auth",
  "repository": {
    "type": "git",
    "url": "git://github.com/balena-io-modules/balena-auth.git"
  },
  "files": [
    "build/",
    "lib/"
  ],
  "keywords": [
    "balena",
    "auth",
    "jwt",
    "api-key",
    "session"
  ],
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "ci": "npm test && catch-uncommitted",
    "lint": "tslint \"lib/**/*.ts\" \"tests/**/*.ts\"",
    "test:node": "mocha -r ts-node/register --reporter spec tests/**/*.spec.ts",
    "test:browser": "karma start",
    "prebuild": "rimraf ./build && npm run prettify",
    "build": "tsc",
    "pretest": "npm run build && npm run lint",
    "test": "npm run test:node && npm run test:browser",
    "prettify": "prettier --use-tabs --single-quote --write \"lib/*.ts\" \"tests/**/*.ts\"",
    "prepublish": "require-npm4-to-publish",
    "prepack": "npm test",
    "prereadme": "npm run build",
    "readme": "jsdoc2md --template doc/README.hbs build/*.js > README.md"
  },
  "author": "Balena Team <hello@balena.io>",
  "license": "Apache-2.0",
  "devDependencies": {
    "@resin.io/types-mochainon": "^2.0.1",
    "@types/jsonwebtoken": "^7.2.3",
    "@types/mocha": "^2.2.42",
    "@types/node": "^8.10.59",
    "balena-config-karma": "^2.3.0",
    "balena-settings-client": "^4.0.0",
    "catch-uncommitted": "^1.0.0",
    "husky": "^4.0.10",
    "jsdoc-to-markdown": "^3.0.0",
    "jsonwebtoken": "^7.3.0",
    "karma": "^1.7.0",
    "mocha": "^3.5.0",
    "mochainon": "^2.0.0",
    "prettier": "^1.19.1",
    "require-npm4-to-publish": "^1.0.0",
    "rimraf": "^2.6.1",
    "ts-node": "^3.3.0",
    "tslint": "^5.5.0",
    "typescript": "^3.7.5"
  },
  "dependencies": {
    "@types/bluebird": "^3.5.29",
    "@types/jwt-decode": "^2.2.1",
    "balena-errors": "^4.2.1",
    "balena-settings-storage": "^5.0.0",
    "bluebird": "^3.7.2",
    "jwt-decode": "^2.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test:node -- --reporter dot"
    }
  }
}
